<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/common_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/common_list_item_img_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/common_list_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#353535"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/common_list_item_img_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp" />

        <View
            android:id="@+id/common_list_item_height_prop"
            android:layout_width="1sp"
            android:layout_height="48dp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/common_list_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#ebebeb" />

    <LinearLayout
        android:id="@+id/common_list_item_line_full"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#ebebeb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp" >

        <TextView
            android:id="@+id/common_list_item_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>