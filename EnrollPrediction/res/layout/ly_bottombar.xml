<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1.5" >

    <LinearLayout
        android:id="@+id/bottomItem1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottomImg1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/enroll_unpress" />

        <TextView
            android:id="@+id/bottomText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="报志愿"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomItem2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottomImg2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/strategy_unpreess" />

        <TextView
            android:id="@+id/bottomText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="高考攻略"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomItem3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottomImg3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/me_unpress" />

        <TextView
            android:id="@+id/bottomText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="我"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>